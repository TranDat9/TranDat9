<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="21dp"
    android:layout_marginTop="28dp"
    android:layout_marginEnd="23dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/customer"
            android:id="@+id/ima_avatar"
            android:layout_width="52dp"
            android:layout_height="52dp"/>
        <TextView
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ima_avatar"
            android:text="Tên: "
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tv_name"
            android:text="nguyễn văn đoạn"
            android:textColor="#000000"
            android:textSize="16sp" />
        <TextView
            android:textSize="14sp"
            android:text="0782637212"
            android:id="@+id/tv_userCCCD"
            android:layout_below="@id/tv_name"
            android:layout_toEndOf="@id/tv_cccd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:text="Số căn cước "
            android:id="@+id/tv_cccd"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ima_avatar"
            android:layout_below="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/tv_cccd"
            android:layout_toEndOf="@id/ima_avatar"
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:"
            android:textColor="#5E5B5B"
            android:textSize="14sp" />
        <TextView
            android:layout_below="@id/tv_cccd"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/address"
            android:text="thị trấn nghèn, can lộc, hà tinhx"
            android:textColor="#5E5B5B"
            android:textSize="14sp"
            android:id="@+id/tv_useraddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/ima_avatar"
            android:text="Phone:"
            android:textColor="#5E5B5B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_userphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_useraddress"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/phone"
            android:text="0867950503"
            android:textColor="#5E5B5B"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/img_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_baseline_delete_24"/>
        <ImageView
            android:id="@+id/img_update"
            android:layout_marginEnd="36dp"
            android:layout_marginTop="64dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_create_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>